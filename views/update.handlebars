<head>
    <title>{{title}}</title>
    <meta name=“viewport” content="width=device-width,initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js" integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/scripts/flash.js"></script>
</head>

<body>
    <nav class="navbar navbar-inverse navbar-static-top row container-fluid">
        <div class="container-fluid">
            <div class="col-md-5">
            </div>
            <a class="navbar-brand col-md-2 container-fluid " href="/">
                <img alt="Flash" src="/img/flashLogo500tranny.png" class="logo center-block img-responsive">
            </a>
            <div class="col-md-2">
            </div>
            <div class="col-md-3 container-fluid">
                <ul class="nav nav-pills container-">
                    <li role="presentation"><a href="/" class="btnLogOut navBtn" role="button">Logout</a></li>
                    <li role="presentation"><a id="createLink" class="btnCreate navBtn" href="/create" role="button">Create</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="section_overlay">
        <section class="container">
            <div class="row">
                <form class="col-sm-12 col-md-12" method="post">
                    <div class="row">
                        <div class="input-field col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
                            <label for="Title">Title</label>
                            <input type="text" class="form-control" id="deck_title" name="title" value="{{title}}">
                        </div>
                    </div>
                    {{#each deck}}
                        <input type="text" name="id" class="hidden" value="{{this.id}}">
                        <div class="row">
                            <div class="input-field col-md-6 col-sm-6">
                                <label for="Front">Front</label>
                                <textarea class="form-control" rows="1" name="front" data-id="{{this.id}}">{{this.front}}</textarea>
                            </div>
                            <div class="input-field col-md-6 col-sm-6">
                                <label for="Back">Back</label>
                                <textarea class="form-control" rows="1" name="back" data-id="{{this.id}}">{{this.back}}</textarea>
                            </div>
                        </div>
                    {{/each}}
                    <div class="addMoreRows">

                    </div>
                    <div class="row btnRow">
                        <input class="btn btn-default col-md-2 col-md-offset-5 upBtn" type="submit" value="Update">
                    </div>
                </form>
                <div class="row btnRow">
                    <button class="btn btn-default col-md-2 upBtn addMore">addMore</button>
                </div>
            </div>
        </section>
    </main>
</body>
